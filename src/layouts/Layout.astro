---
import Header from "../components/Header.astro"
import "../styles/global.css"
const { title, emoji, desc } = Astro.props
---

<html lang={Astro.currentLocale}>
  <head>
    <meta charset="utf-8" />
    <link
      rel="icon"
      type="img/svg+xml"
      href="/favicon.svg"
    />
    <meta
      name="viewport"
      content="width=device-width, initial-scale=1"
    />
    <meta
      name="description"
      content={desc}
    />
    <title>{title + " - È§.io"}</title>
  </head>
  <body
    class={`
      bg-stone-200 text-justify
      selection:bg-amber-300/50 selection:text-amber-950
    `}
  >
    <Header title={title} />
    <main
      class={`
        z-0 flex w-full flex-col items-center leading-loose text-stone-800
      `}
    >
      <header
        class={`
          flex h-[50lvh] min-h-96 w-full justify-center bg-linear-to-b
          from-stone-50 from-50% to-stone-200 pb-20
        `}
      >
        <div
          class={`
            flex w-full max-w-prose flex-col items-center justify-end-safe px-6
          `}
        >
          <span
            class="text-6xl"
            aria-hidden="true"
            >{emoji}</span
          >
          <h1>{title}</h1>
        </div>
      </header>
      <article class="max-w-prose px-6">
        <slot />
      </article>
    </main>
  </body>
</html>
