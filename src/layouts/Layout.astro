---
import Header from "../components/Header.astro"
import "../styles/global.css"
const { title } = Astro.props
---

<html lang={Astro.currentLocale}>
  <head>
    <meta charset="utf-8" />
    <link
      rel="icon"
      type="img/svg+xml"
      href="/favicon.svg"
    />
    <meta
      name="viewport"
      content="width=device-width, initial-scale=1"
    />
    <title>{title + " | atridott.github.io"}</title>
  </head>
  <body
    class={`
      bg-slate-100 text-justify
      selection:bg-sky-200/90 selection:text-sky-900
    `}
  >
    <Header />
    <main
      class={`
        mx-auto w-full max-w-2xl scroll-pt-60 px-12 pt-60 leading-loose
        text-slate-950
      `}
    >
      <h1>{title}</h1>
      <slot />
    </main>
  </body>
</html>
