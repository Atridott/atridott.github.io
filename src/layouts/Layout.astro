---
import Header from "../components/layout/Header.astro"
import "../styles/global.css"
const { title, emoji, tone, desc } = Astro.props
---

<html
  lang={Astro.currentLocale}
  data-tone={tone}
>
  <head>
    <meta charset="utf-8" />
    <link
      rel="icon"
      type="img/svg+xml"
      href="/favicon.svg"
    />
    <meta
      name="viewport"
      content="width=device-width, initial-scale=1"
    />
    <meta
      name="description"
      content={desc}
    />
    <title>{`${title} - È§.io`}</title>
  </head>
  <body
    class={`
      bg-page text-justify
      selection:bg-selection-bg selection:text-selection
    `}
  >
    <Header title={title} />
    <main
      class={`
        isolate z-0 flex w-full flex-col items-center leading-loose text-text
      `}
    >
      <header
        class={`
          flex h-[60dvh] min-h-[30rem] w-full justify-center border-b-2
          border-text-dim/10
          bg-[image:repeating-linear-gradient(135deg,var(--stripe)_0,var(--stripe)_2px,transparent_0,transparent_50%)]
          bg-[size:12px_12px]
          [--stripe:var(--color-text-dim)]/10
        `}
      >
        <div
          class={`
            flex w-full max-w-[calc(65ch+3rem)] flex-col justify-end gap-6
            border-x-2 border-text-dim/10 px-6
          `}
        >
          <span
            class="text-8xl"
            aria-hidden="true"
            >{emoji}</span
          >
          <h1 class="mb-20 text-3xl">{title}</h1>
        </div>
      </header>
      <article
        class={`max-w-[calc(65ch+3rem)] border-x-2 border-text-dim/10 p-6`}
      >
        <slot />
      </article>
    </main>
  </body>
</html>
