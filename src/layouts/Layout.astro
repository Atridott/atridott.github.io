---
import Header from "../components/Header.astro"
import "../styles/global.css"
const { title } = Astro.props
---

<html lang={Astro.currentLocale}>
  <head>
    <meta charset="utf-8" />
    <link
      rel="icon"
      type="img/svg+xml"
      href="/favicon.svg"
    />
    <meta
      name="viewport"
      content="width=device-width, initial-scale=1"
    />
    <title>{title + " - Atridott"}</title>
  </head>
  <body
    class={`
      bg-stone-200 text-justify
      selection:bg-sky-200/90 selection:text-sky-900
    `}
  >
    <Header title={title} />
    <main
      class={`mx-auto w-full max-w-prose px-12 leading-loose text-stone-800`}
    >
      <h1
        class={`
          flex h-[50lvh] items-end-safe text-2xl font-semibold font-stretch-50%
        `}
      >
        {title}
      </h1>
      <slot />
    </main>
  </body>
</html>
